generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  bookings  Booking[]
}

enum Role {
  USER
  ADMIN
}

model Branch {
  id        String   @id @default(cuid())
  name      String
  lat       Float
  lng       Float
  createdAt DateTime @default(now())
  fields    Field[]
}

model Field {
  id        String   @id @default(cuid())
  name      String
  branch    Branch   @relation(fields: [branchId], references: [id])
  branchId  String
  createdAt DateTime @default(now())
  bookings  Booking[]
}

model Booking {
  id              String        @id @default(cuid())
  user            User          @relation(fields: [userId], references: [id])
  userId          String
  field           Field         @relation(fields: [fieldId], references: [id])
  fieldId         String
  status          BookingStatus @default(pending)
  amount          Float
  promptPayQrUrl  String?
  createdAt       DateTime      @default(now())
  slots           BookingSlot[]
}

enum BookingStatus {
  pending
  confirmed
  cancelled
}

model BookingSlot {
  id        String   @id @default(cuid())
  booking   Booking  @relation(fields: [bookingId], references: [id])
  bookingId String
  startTime DateTime
  endTime   DateTime
}